generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Tipo {
  DOCE
  SALGADA
  BEBIDA
}

model Receita {
  id              Int     @id @default(autoincrement())
  nome            String
  tipo            Tipo
  ingredientes    String  @db.Text
  modoFazer       String @db.Text
  img             String?
  custoAproximado Float?
}
